<h1>{{ title }}</h1>
<p>Last sync: {{ last_sync }}</p>
<p>Events checked: {{ events_total }}</p>
<p>New or updated: {{ events_saved }}</p>
<p>Deleted: {{ events_trashed }}</p>
<p>User on CiviCRM:Â {{ civi_user }}</p>
{{ ^use_cache }}
<p>No cache</p>
{{ /use_cache }}

<form action="admin-post.php" method="post">
    <input type="hidden" name="action" value="civi_events_erase_ids">
    {{{ clear_nonce }}}
    <input type="submit" value="Clear IDs">
</form>
<form action="admin-post.php" method="post">
    <input type="hidden" name="action" value="civi_save_event">
    {{{ save_nonce }}}
    <input type="submit" value="Save first event">
</form>
<form action="admin-post.php" method="post">
    <input type="hidden" name="action" value="civi_sync_all">
    {{{ sync_nonce }}}
    <input type="submit" value="Sync events">
</form>
{{# civi_debug }}
<h4>Stored IDs:</h4>
<p>{{ stored_ids }}</p>
{{/ civi_debug }}